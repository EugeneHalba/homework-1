# імпорт datetime
from datetime import datetime
# створення функції для підрахунку кількості днів 
def get_days_from_today():
  
    while True:
        # введення дати з клавіатури
        date_srting = (input('Input date: '))
        #завершення виконання коду
        if date_srting == "exit":
                exit()
        #розрахунок кількості днів
        try:
            date_datetime = datetime.strptime(date_srting,'%Y-%m-%d').date() 
            now_date = datetime.now().date()
            number_day = now_date - date_datetime    
            print (f'Number of days :', number_day.days)
        #перевірка коректності вводу дати
        except ValueError :  
            print ("Input date in format: Year-Month-May, or write exit to end!")
#виведення результату        
print (get_days_from_today())